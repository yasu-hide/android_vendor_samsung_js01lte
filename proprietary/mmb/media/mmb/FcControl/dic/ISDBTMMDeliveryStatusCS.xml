<?xml version="1.0" encoding="UTF-8"?>
<!-- version:20110826001 -->
<TVAMain xml:lang="ja" xmlns="http://www.arib.or.jp/metadata/tva/2011/03" xmlns:mpeg7="urn:mpeg:mpeg7:schema:2001" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <ClassificationSchemeTable>
    <ClassificationScheme uri="http://www.isdb-t.jp/cs/2011/03/ISDBTMMDeliveryStatusCS" fragmentId="0010000004" fragmentVersion="20110301000000">
      <!-- 
　コンテンツの配信ステータスを定義。:Genre/@hrefで記載
// -->
      <mpeg7:Term termID="1">
        <mpeg7:Name xml:lang="ja">配信ステータス</mpeg7:Name>
        <mpeg7:Name xml:lang="en">delivery status</mpeg7:Name>
      </mpeg7:Term>
      <mpeg7:Term termID="1.1">
        <mpeg7:Name xml:lang="ja">配信予定</mpeg7:Name>
        <mpeg7:Name xml:lang="en">coming soon</mpeg7:Name>
        <mpeg7:Definition xml:lang="ja">配信開始日時は未定だが、近日配信する予定。メタデータは表示可</mpeg7:Definition>
      </mpeg7:Term>
      <mpeg7:Term termID="1.2">
        <mpeg7:Name xml:lang="ja">配信中</mpeg7:Name>
        <mpeg7:Name xml:lang="en">available</mpeg7:Name>
        <mpeg7:Definition xml:lang="ja">配信中</mpeg7:Definition>
      </mpeg7:Term>
      <mpeg7:Term termID="1.3">
        <mpeg7:Name xml:lang="ja">配信停止</mpeg7:Name>
        <mpeg7:Name xml:lang="en">suspension</mpeg7:Name>
        <mpeg7:Definition xml:lang="ja">一時配信停止している状態。再開するかは未定。メタデータは表示可</mpeg7:Definition>
      </mpeg7:Term>
      <mpeg7:Term termID="1.4">
        <mpeg7:Name xml:lang="ja">配信終了</mpeg7:Name>
        <mpeg7:Name xml:lang="en">end</mpeg7:Name>
        <mpeg7:Definition xml:lang="ja">配信が終了した状態。再開は現時点ではなし。メタデータの表示は任意</mpeg7:Definition>
      </mpeg7:Term>
      <mpeg7:Term termID="1.5">
        <mpeg7:Name xml:lang="ja">配信中止</mpeg7:Name>
        <mpeg7:Name xml:lang="en">cancel</mpeg7:Name>
        <mpeg7:Definition xml:lang="ja">配信を中止した状態。再開は現時点ではなし。メタデータの表示は不可だが、別途、配信中止された旨を表示することを推奨。</mpeg7:Definition>
      </mpeg7:Term>
      <mpeg7:Term termID="1.6">
        <mpeg7:Name xml:lang="ja">延期</mpeg7:Name>
        <mpeg7:Name xml:lang="en">postponement</mpeg7:Name>
        <mpeg7:Definition xml:lang="ja">配信が延期になった状態。現時点で新たな配信日時が決定／未定かは問わない。メタデータは表示可。</mpeg7:Definition>
      </mpeg7:Term>
      <mpeg7:Term termID="1.7">
        <mpeg7:Name xml:lang="ja">削除</mpeg7:Name>
        <mpeg7:Name xml:lang="en">delete</mpeg7:Name>
        <mpeg7:Definition xml:lang="ja">受信機に蓄積されたコンテンツやライセンス・鍵の削除が必要になった場合に指定。メタデータの表示は不可だが、別途、削除される旨を表示することを推奨。</mpeg7:Definition>
      </mpeg7:Term>
    </ClassificationScheme>
  </ClassificationSchemeTable>
</TVAMain>
